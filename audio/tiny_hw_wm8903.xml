<!-- TinyHAL configuration file for TF300T -->
<tinyhal>

    <path>
        <!-- playback paths-->
        <ctl name="DRC Switch" val="1"/>
        <ctl name="Left Speaker Mixer DACL Switch" val="1"/>
        <ctl name="Right Speaker Mixer DACR Switch" val="1"/>
        <ctl name="Headphone Switch" val="1"/>
        <ctl name="HPF Mode" val="Hi-fi"/>
        <!-- capture paths-->
        <ctl name="Left Input PGA Volume" val="0x1C"/>
        <ctl name="Right Input PGA Volume" val="0x1C"/>
    </path>

    <device name="speaker" alsa_card="1">
        <path name="on">
            <ctl name="Int Spk Switch" val="1"/>
            <ctl name="Speaker Switch" val="1"/>
        </path>
        <path name="off">
            <ctl name="Int Spk Switch" val="0"/>
            <ctl name="Speaker Switch" val="0"/>
        </path>
    </device>

    <!-- Headphone and headset output -->
    <device name="headphone" alsa_card="1">
        <path name="on">
            <ctl name="Headphone Jack Switch" val="1"/>
        </path>
        <path name="off">
            <ctl name="Headphone Jack Switch" val="0"/>
        </path>
    </device>

    <device name="dock" alsa_card="1">
        <path name="on">
            <ctl name="AUX Switch" val="1"/>
        </path>
        <path name="off">
            <ctl name="AUX Switch" val="0"/>
        </path>
    </device>

    <!-- This is headset mic, not output -->
    <device name="headset" alsa_card="1">
        <path name="on">
            <ctl name="Recording Gain" val="1"/>
            <ctl name="Left Input PGA Common Mode Switch" val="0"/>
            <ctl name="Left Input Inverting Mux" val="IN2L"/>
            <ctl name="Left Input Mux" val="IN1L"/>
            <ctl name="Left Capture Mux" val="Left"/>
            <ctl name="Right Capture Mux" val="Left"/>
            <ctl name="Left Input PGA Switch" val="1"/>
            <ctl name="ADC Input" val="ADC"/>
            <ctl name="Mic Jack Switch" val="1"/>
        </path>
        <path name="off">
            <ctl name="Left Input PGA Common Mode Switch" val="1"/>
            <ctl name="Left Capture Mux" val="Left"/>
            <ctl name="Right Capture Mux" val="Right"/>
            <ctl name="Left Input PGA Switch" val="0"/>
            <ctl name="Mic Jack Switch" val="0"/>
        </path>
    </device>

    <device name="builtin-mic">
        <path name="on">
            <ctl name="Recording Gain" val="0"/>
            <ctl name="Left Input PGA Common Mode Switch" val="1"/>
            <ctl name="Left Capture Mux" val="Left"/>
            <ctl name="Left Input PGA Switch" val="0"/>
            <ctl name="ADC Input" val="DMIC"/>
            <ctl name="Int Mic Switch" val="1"/>
        </path>
        <path name="off">
            <ctl name="Int Mic Switch" val="0"/>
        </path>
    </device>

    <device name="hdmi" alsa_card="0" alsa_device="3">
    </device>

</tinyhal>
